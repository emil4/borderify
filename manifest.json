{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a solid red border.",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://shazoo.ru/*"],
      "js": ["borderify.js"]
    }
  ]

}